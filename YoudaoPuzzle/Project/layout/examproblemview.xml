<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical" 
	    android:gravity="center"
	    android:background="@drawable/examproblemview_bg">
	
	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_marginTop="10dp"
	        android:orientation="vertical" >

		    <RelativeLayout
		        android:id="@+id/rl"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_alignParentTop="true" >
		         
		        <TextView 
			        android:id = "@+id/examtv1"
			        android:layout_width = "fill_parent"
			        android:layout_height = "wrap_content"
			        android:textColor="#ff000000"
			        android:textSize = "20sp"
			        android:gravity = "center"
		        	/>

		        <EditText
		            android:id="@+id/examET1"
		            android:layout_width="fill_parent"
		            android:layout_height="40dp"
		            android:gravity="center"
		            android:textSize="20sp" />

			    <TextView 
			        android:id = "@+id/examtv2"
			        android:layout_width = "fill_parent"
			        android:layout_height = "wrap_content"
			        android:textColor="#ff000000"
			        android:textSize = "20sp"
			        android:gravity="center"
			        android:layout_below = "@id/examET1"
			        />

			     <EditText
			         android:id="@+id/examET2"
			         android:layout_width="fill_parent"
			         android:layout_height="40dp"
			         android:layout_below="@id/examET1"
			         android:gravity="center"
			         android:textSize="20sp" />

			    <TextView 
			        android:id = "@+id/examtv3"
			        android:layout_width = "fill_parent"
			        android:layout_height = "wrap_content"
			        android:textColor="#ff000000"
			        android:textSize = "20sp"
			        android:gravity = "center"
			        android:layout_below = "@id/examET2"
			        />

			    <EditText
			        android:id="@+id/examET3"
			        android:layout_width="fill_parent"
			        android:layout_height="40dp"
			        android:layout_below="@id/examET2"
			        android:gravity="center"
			        android:textSize="20sp" />

			    </RelativeLayout>
		      
			    <TableLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:layout_below="@id/rl">
			          
					<TableRow>
					    <Button
							android:id="@+id/eab11"
							style="?android:attr/buttonStyleSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/game1_hint_btn_style"
							android:textColor="#ff000000"
							android:visibility="gone"
							android:layout_weight="1"
						/>
			            <Button
			                android:id="@+id/eab12"
			                style="?android:attr/buttonStyleSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/game1_hint_btn_style"
			        		android:textColor="#ff000000"
			                android:visibility="gone"
			                android:layout_weight="1"
			            />
			            <Button
			                android:id="@+id/eab13"
			                style="?android:attr/buttonStyleSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/game1_hint_btn_style"
			        		android:textColor="#ff000000"
			                android:visibility="gone"
			                android:layout_weight="1"
			            />
			            <Button
			                android:id="@+id/eab14"
			                style="?android:attr/buttonStyleSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/game1_hint_btn_style"
			        		android:textColor="#ff000000"
			                android:visibility="gone"
			                android:layout_weight="1"
			            />
					</TableRow>
			        <TableRow>
			        	<Button
			                android:id="@+id/eab21"
			                style="?android:attr/buttonStyleSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/game1_hint_btn_style"
							android:textColor="#ff000000"
			                android:visibility="gone"
			                android:layout_weight="1"
			                />
			            <Button
			                android:id="@+id/eab22"
			                style="?android:attr/buttonStyleSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/game1_hint_btn_style"
							android:textColor="#ff000000"
			                android:visibility="gone"
			                android:layout_weight="1"
			                />
			            <Button
			                android:id="@+id/eab23"
			                style="?android:attr/buttonStyleSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/game1_hint_btn_style"
							android:textColor="#ff000000"
			                android:visibility="gone"
			                android:layout_weight="1"
			                />
			            <Button
			                android:id="@+id/eab24"
			                style="?android:attr/buttonStyleSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/game1_hint_btn_style"
							android:textColor="#ff000000"
			                android:visibility="gone"
			                android:layout_weight="1"
			                />
				</TableRow>
					<TableRow>
			            <Button
			                android:id="@+id/eab31"
			                style="?android:attr/buttonStyleSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/game1_hint_btn_style"
							android:textColor="#ff000000"
			                android:visibility="gone"
			                android:layout_weight="1"
			                />
			            <Button
			                android:id="@+id/eab32"
			                style="?android:attr/buttonStyleSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/game1_hint_btn_style"
							android:textColor="#ff000000"
			                android:visibility="gone"
			                android:layout_weight="1"
			                />
			            <Button
			                android:id="@+id/eab33"
			                style="?android:attr/buttonStyleSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/game1_hint_btn_style"
							android:textColor="#ff000000"
			                android:visibility="gone"
			                android:layout_weight="1"
			                />
			            <Button
							android:id="@+id/eab34"
							android:visibility="gone"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/game1_hint_btn_style"
							android:textColor="#ff000000"
							android:layout_weight="1"
	         				/>
				</TableRow>
					<TableRow>
						<Button
			                android:id="@+id/eab41"
			                style="?android:attr/buttonStyleSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
			                android:visibility="gone"
			                android:background="@drawable/game1_hint_btn_style"
			                android:textColor="#ff000000"
			                android:layout_weight="1"
			                />
			            <Button
			                android:id="@+id/eab42"
			                style="?android:attr/buttonStyleSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
			                android:visibility="gone"
			                android:background="@drawable/game1_hint_btn_style"
			                android:layout_weight="1"
			                />
			            <Button
			                android:id="@+id/eab43"
			                style="?android:attr/buttonStyleSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
			                android:visibility="gone"
			                android:background="@drawable/game1_hint_btn_style"
			                android:layout_weight="1"
			                />
			            <Button
			                android:id="@+id/eab44"
			                style="?android:attr/buttonStyleSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#ff000000"
			                android:background="@drawable/game1_hint_btn_style"
			                android:layout_weight="1"
			                android:visibility="gone"
			                />
					</TableRow>          
				</TableLayout>

			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="15dp"
				android:layout_alignParentBottom="true"
				
	         	>
	            <Button
	                android:id="@+id/btnTishi"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:background="@drawable/test_hint_btn"
	                android:paddingLeft="30dip"
	                android:paddingTop="15dp"
	                android:text="提示" 
	                />
	            <Button
	                android:id="@+id/btnTijiao"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_toRightOf="@id/btnTishi"
	                android:background="@drawable/test_submit_btn"
	                android:paddingLeft="30dip"
	                android:paddingTop="15dp"
	                android:text="提交" 
	                />
	            <Button
	                 android:id="@+id/btnNext"
	                 android:layout_height="wrap_content"
	                 android:layout_width="wrap_content"
	                 android:layout_alignParentRight="true"
	                 android:background="@drawable/test_forward_bg"
	                 android:paddingTop="15dp"
		             />
	            <Button
	                 android:id="@+id/btnLast"
	                 android:layout_height="wrap_content"
	                 android:layout_width="wrap_content"
	                 android:layout_toLeftOf="@id/btnNext"
	                 android:background="@drawable/test_back_bg"
	                 android:paddingTop="15dp"
	                 />
		      </RelativeLayout>
	      
		</RelativeLayout>
	</LinearLayout>